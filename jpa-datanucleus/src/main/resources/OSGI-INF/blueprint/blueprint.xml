<blueprint default-activation="eager"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jpa="http://aries.apache.org/xmlns/jpa/v1.0.0"
           xmlns:tx="http://aries.apache.org/xmlns/transactions/v1.0.0">

    <bean id="datanucleus_app_managed_data_service"
          class="com.github.lburgazzoli.examples.karaf.jpa.datanucleus.data.ApplicationManagedDataService">
        <jpa:unit unitname="DATA_DATANUCLEUS" property="entityManagerFactory">
            <jpa:map>
                <entry key="datanucleus.autoCreateSchema" value="true"/>
            </jpa:map>
        </jpa:unit>
    </bean>

    <service ref="datanucleus_app_managed_data_service"
             interface="com.github.lburgazzoli.examples.karaf.jpa.commons.data.IDataService">
        <service-properties>
            <entry key   = "osgi.jndi.service.name"
                   value = "datanucleus/app_managed_data_service"/>
        </service-properties>
    </service>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="item/datanucleus-am-add">
            <action class="com.github.lburgazzoli.examples.karaf.jpa.datanucleus.cmd.AMItemAddCommand">
                <property name="dataService" ref="datanucleus_app_managed_data_service"/>
            </action>
        </command>
        <command name="item/datanucleus-am-list">
            <action class="com.github.lburgazzoli.examples.karaf.jpa.datanucleus.cmd.AMItemListCommand">
                <property name="dataService" ref="datanucleus_app_managed_data_service"/>
            </action>
        </command>
    </command-bundle>

</blueprint>
