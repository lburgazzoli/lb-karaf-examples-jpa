<blueprint default-activation="eager"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <cm:property-placeholder persistent-id="axon.engine" update-strategy="reload" >
        <cm:default-properties>
            <cm:property name="event.store.path" value="./data/axon/eventstore"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <bean id    = "AXON_CMD_BUS"
          class = "org.axonframework.commandhandling.SimpleCommandBus">
    </bean>

    <bean id    = "AXON_CMD_GW"
          class = "com.github.lburgazzoli.examples.karaf.axon.SimpleCommandGateway">
        <argument ref="AXON_CMD_BUS"/>
    </bean>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <bean id    = "AXON_EVT_STORE"
          class = "org.axonframework.eventstore.fs.FileSystemEventStore">
        <argument>
            <bean class="org.axonframework.eventstore.fs.SimpleEventFileResolver">
                <argument>
                    <bean class="java.io.File">
                        <argument value="${event.store.path}"/>
                    </bean>
                </argument>
            </bean>
        </argument>
    </bean>

    <bean id    = "AXON_EVT_BUS"
          class = "org.axonframework.eventhandling.SimpleEventBus">
    </bean>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <bean id="AXON_ENGINE"
          class="com.github.lburgazzoli.examples.karaf.axon.SimpleAxonEngine"
          init-method="init"
          destroy-method="destroy">
        <property name="commandBus"     ref="AXON_CMD_BUS"/>
        <property name="commandGateway" ref="AXON_CMD_GW"/>
        <property name="eventBus"       ref="AXON_EVT_BUS"/>
        <property name="eventStore"     ref="AXON_EVT_STORE"/>
    </bean>

    <reference-list
        id           = "AXON_EVT_LISTENER_REFS"
        interface    = "org.axonframework.eventhandling.EventListener"
        member-type  = "service-object"
        availability = "optional">
        <reference-listener
            ref           = "AXON_ENGINE"
            bind-method   = "bindEventListener"
            unbind-method = "unbindEventListener">
        </reference-listener>
    </reference-list>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <service ref="AXON_ENGINE">
        <interfaces>
            <value>com.github.lburgazzoli.examples.karaf.axon.IAxonEngine</value>
            <value>org.axonframework.commandhandling.gateway.CommandGateway</value>
        </interfaces>
        <service-properties>
            <entry key="osgi.jndi.service.name" value="axon.engine"/>
        </service-properties>
    </service>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="data/create">
            <action class="com.github.lburgazzoli.examples.karaf.axon.cmd.CreateDataCommand">
                <property name="engine" ref="AXON_ENGINE"/>
            </action>
        </command>
    </command-bundle>

</blueprint>
