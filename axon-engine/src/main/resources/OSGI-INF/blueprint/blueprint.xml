<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm  = "http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns:jpa = "http://aries.apache.org/xmlns/jpa/v1.1.0"
           xmlns:tx  = "http://aries.apache.org/xmlns/transactions/v1.0.0">

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <cm:property-placeholder persistent-id="com.github.lburgazzoli.karaf.axon.engine" update-strategy="reload" >
        <cm:default-properties>
            <cm:property name="event.store.path"  value="./data/axon/eventstore"/>
            <cm:property name="classpath.bundles" value="axon-commons,axon-engine"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <reference id        = "osgiJtaTransactionManager"
               interface = "javax.transaction.TransactionManager"/>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->


    <bean id    = "AXON_CL"
          class = "com.github.lburgazzoli.osgi.OSGiClassLoader">
    </bean>

    <bean id    = "AXON_CL_MANAGER"
          class = "com.github.lburgazzoli.osgi.OSGiClassLoaderManager"
          init-method="init"
          destroy-method="destroy">
        <argument ref="blueprintBundleContext"/>
        <argument ref="AXON_CL"/>
        <property name="eligibleBundleIds" value="${classpath.bundles}"/>
    </bean>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <!--
    <bean id    = "AXON_EVT_SERIALIZER"
          class = "org.axonframework.serializer.xml.XStreamSerializer">
        <argument>
            <bean class = "com.thoughtworks.xstream.XStream">
                <property name="classLoader" ref="AXON_CL"/>
            </bean>
        </argument>
    </bean>
    -->

    <bean id    = "AXON_EVT_SERIALIZER"
          class = "com.github.lburgazzoli.examples.axon.serializer.JacksonSerializer">
        <argument ref="AXON_CL"/>
    </bean>

    <bean id    = "AXON_CMD_BUS_ROLLBACK_CFG"
          class = "com.github.lburgazzoli.examples.karaf.axon.engine.SimpleRollbackConfiguration">
    </bean>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->


    <bean id    = "AXON_CMD_BUS_TX_MANAGER"
          class = "com.github.lburgazzoli.examples.axon.helper.AxonJtaTransactionManager">
        <argument ref="osgiJtaTransactionManager"/>
    </bean>

    <bean id    = "AXON_CMD_BUS"
          class = "org.axonframework.commandhandling.SimpleCommandBus">
        <property name="rollbackConfiguration" ref="AXON_CMD_BUS_ROLLBACK_CFG"/>
        <!--
        <property name="transactionManager"    ref="AXON_CMD_BUS_TX_MANAGER"/>
        -->
    </bean>

    <bean id    = "AXON_CMD_GW"
          class = "com.github.lburgazzoli.examples.axon.helper.AxonCommandGateway">
        <argument ref="AXON_CMD_BUS"/>
    </bean>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <!--
    <bean id    = "AXON_JPA_EMP"
          class = "org.axonframework.common.jpa.ContainerManagedEntityManagerProvider">
        <jpa:context property="entityManager" unitname="AXON_PU"/>
    </bean>

    <bean id    = "AXON_JPA_EVT_SERIALIZER"
          class = "org.axonframework.serializer.xml.XStreamSerializer">
    </bean>

    <bean id    = "AXON_EVT_STORE"
          class = "org.axonframework.eventstore.jpa.JpaEventStore">
        <argument ref="AXON_JPA_EMP"/>
        <argument ref="AXON_JPA_EVT_SERIALIZER"/>
    </bean>
    -->

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <bean id    = "AXON_EVT_STORE_FS_RESOLVER"
          class = "org.axonframework.eventstore.fs.SimpleEventFileResolver">
        <argument>
            <bean class="java.io.File">
                <argument value="${event.store.path}"/>
            </bean>
        </argument>
    </bean>

    <bean id    = "AXON_EVT_STORE"
          class = "org.axonframework.eventstore.fs.FileSystemEventStore">
        <argument ref="AXON_EVT_SERIALIZER"/>
        <argument ref="AXON_EVT_STORE_FS_RESOLVER"/>
    </bean>

    <bean id    = "AXON_EVT_BUS"
          class = "org.axonframework.eventhandling.SimpleEventBus">
    </bean>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <bean id="AXON_ENGINE"
          class="com.github.lburgazzoli.examples.karaf.axon.engine.SimpleAxonEngine"
          init-method="init"
          destroy-method="destroy">
        <property name="commandBus"     ref="AXON_CMD_BUS"/>
        <property name="commandGateway" ref="AXON_CMD_GW"/>
        <property name="eventBus"       ref="AXON_EVT_BUS"/>
        <property name="eventStore"     ref="AXON_EVT_STORE"/>
    </bean>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <service ref="AXON_ENGINE">
        <interfaces>
            <value>com.github.lburgazzoli.examples.axon.IAxonEngine</value>
        </interfaces>
        <service-properties>
            <entry key="osgi.jndi.service.name" value="axon.engine"/>
        </service-properties>
    </service>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="axon/list-repos">
            <action class="com.github.lburgazzoli.examples.karaf.axon.engine.cmd.ListRepositoriesCommand">
                <property name="service" ref="AXON_ENGINE"/>
            </action>
        </command>
    </command-bundle>

</blueprint>
