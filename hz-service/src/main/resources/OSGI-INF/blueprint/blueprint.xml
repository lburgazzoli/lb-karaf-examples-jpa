<blueprint
        xmlns   = "http://www.osgi.org/xmlns/blueprint/v1.0.0"
        xmlns:cm = "http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <cm:property-placeholder persistent-id="com.github.lburgazzoli.karaf.hz.service" update-strategy="reload" >
        <cm:default-properties>
            <cm:property
                name  = "hz.config.path"
                value = "etc/com.github.lburgazzoli.karaf.hz.service.xml"/>
            <cm:property
                name  = "hz.classloader.bundles"
                value = "karaf-examples-osgi-commons"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <bean id    = "OSGI_CLASSLOADER"
          class = "com.github.lburgazzoli.osgi.OSGiClassLoader">
    </bean>

    <bean id             = "OSGI_CLASSLOADER_MGR"
          class          = "com.github.lburgazzoli.osgi.OSGiClassLoaderManager"
          init-method    = "init"
          destroy-method = "destroy">
        <argument ref  = "blueprintBundleContext"/>
        <argument ref  = "OSGI_CLASSLOADER"/>
        <property name = "eligibleBundleIds" value="${hz.classloader.bundles}"/>
    </bean>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <bean id             = "HZ_PROVIDER"
          class          = "com.github.lburgazzoli.examples.karaf.hz.HazelcastInstanceProvider"
          init-method    = "init"
          destroy-method = "destroy">
        <argument>
            <bean class = "com.github.lburgazzoli.examples.karaf.hz.HazelcastConfig">
                <argument value = "${hz.config.path}"/>
                <argument ref   = "OSGI_CLASSLOADER"/>
            </bean>
        </argument>
    </bean>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <service ref="HZ_PROVIDER">
        <interfaces>
            <value>com.github.lburgazzoli.examples.karaf.hz.IHazelcastInstanceProvider</value>
        </interfaces>
        <service-properties>
            <entry key="osgi.jndi.service.name" value="hz.instance.provider"/>
        </service-properties>
    </service>

    <!-- ******************************************************************* -->
    <!-- COMPLETERS                                                          -->
    <!-- ******************************************************************* -->

    <bean id    = "HZ_LIST_COMPLETER"
          class = "com.github.lburgazzoli.examples.karaf.hz.cmd.HazelcastListCompleter">
        <property name="service" ref="HZ_PROVIDER"/>
    </bean>

    <bean id    = "HZ_CL_CLASS_LIST_COMPLETER"
          class = "com.github.lburgazzoli.examples.karaf.hz.cmd.ClassLoaderClassListCompleter">
        <property name="service" ref="OSGI_CLASSLOADER"/>
    </bean>

    <!-- ******************************************************************* -->
    <!-- COMMANDS                                                            -->
    <!-- ******************************************************************* -->

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="hz/list">
            <action class="com.github.lburgazzoli.examples.karaf.hz.cmd.HazelcastListCommand">
                <property name="service" ref="HZ_PROVIDER"/>
            </action>
            <completers>
                <ref component-id="HZ_LIST_COMPLETER"/>
            </completers>
        </command>
        <command name="hz/cl-bundles">
            <action class="com.github.lburgazzoli.examples.karaf.hz.cmd.ClassLoaderBundleListCommand">
                <property name="service" ref="OSGI_CLASSLOADER"/>
            </action>
        </command>
        <command name="hz/cl-classes">
            <action class="com.github.lburgazzoli.examples.karaf.hz.cmd.ClassLoaderClassListCommand">
                <property name="service" ref="OSGI_CLASSLOADER"/>
            </action>
            <completers>
                <ref component-id="HZ_CL_CLASS_LIST_COMPLETER"/>
            </completers>
        </command>
    </command-bundle>

</blueprint>
